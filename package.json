{
  "name": "inventory-backend",
  "version": "1.0.0",
  "description": "Barcode-driven inventory system backend",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install",
    "clean": "rm -rf node_modules",
    "lint": "eslint .",
    "production": "NODE_ENV=production node server.js",
    "deploy": "npm run clean && npm install && cp .env.production .env && pm2 restart server.js --name 'inventory-backend'"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "express-async-handler": "^1.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
} 